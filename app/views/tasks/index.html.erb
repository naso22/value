<%= render 'shared/header' %>
     <% if user_signed_in? %>
<%= link_to '追加', new_task_path %>

  <table>
  <thead>
    <tr>
      <th>価値観</th>
      <th>詳細</th>
      <th>img</th>
      <th></th>
        <th></th>

    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.details %></td>
        <td><img src="/value-img/<%= task.image %>"></td>
        <td><%= link_to '編集', edit_task_path(task) %></td>
        <td><%= link_to '削除', task_path(task), data: { turbo_method: :delete } %></td>
      </tr>
      <% end %>
        <% else %>
 <%= link_to new_user_session_path do %>
     <div>ログインしてください</div>
    <% end %>

       <% end %>


  </tbody>
</table>
